if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget

  line-height: 2.0 em
  word-wrap: break-word
  font-size: 14px
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.category-list
  font-size 0.9em
  padding 15px 10px 
  .category-list-count
    margin-left 6px
    font-size 0.8em
    color color-meta
    &:before
      content '('
    &:after
      content ')'

ul, ol, dl
  list-style none
  ul, ol, dl
    margin-left 20px
    li:before
      content '> '
	  
.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 5px
    display: inline-block
