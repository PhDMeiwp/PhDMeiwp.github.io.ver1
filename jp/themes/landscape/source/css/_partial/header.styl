#header
  height: banner-height
  position: relative
  border-bottom: none
  &:before, &:after
    content: ""
    position: absolute
    left: 0
    right: 0
    height: 0
  &:before
    top: 0
    background: #000
  &:after
    bottom: 0
    background: #000

#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  overflow: hidden

  
#banner
  position: relative
  top: 0
  left: 0 px
  width: 100%
  height: 100%
  background: url(banner-url) center #000
  background-size: cover;
  z-index: -1

#header-title
  text-align: center
  height: logo-size
  position: absolute
  top: 50%
  left: 0 px
  color: #eee
  z-index: -3
  
$logo-text
  text-decoration: none
  color: #eee


#logo
  @extend $logo-text
  font-size: logo-size
  line-height: logo-size
  letter-spacing: 2px

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 1px
  color: #eee

#subtitle-wrap
  margin-top: subtitle-size

#main-nav
  float: left
  font-size: 18px
  margin-left: 0 px


$nav-link
  float: left
  color: blue

  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: color 0.2s
  display: block
  padding: 20px 15px
  &:hover
    color: #000

.nav-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  font-size: 18px
  width: 18px
  height: 18px
  padding: 20px 15px
  position: relative
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block

#sub-nav
  float: right
  margin-right: 0px


